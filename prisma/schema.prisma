generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           Int      @id @default(autoincrement())
  baleId       String   @unique
  phone        String
  firstName    String
  lastName     String?
  gender       String?
  birthYear    String?  // Store just the year
  nationalId   String
  insurance    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
